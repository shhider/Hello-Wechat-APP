.container {
    padding: 40rpx 0;
    background-color: #f5f5f5;
}

.profile {
    display: flex;
    flex-direction: row;
    margin-bottom: 60rpx;
    padding: 30rpx 40rpx;
    background-color: #fff;
    border-top: 1px solid rgba(0,0,0,.07);
    border-bottom: 1px solid rgba(0,0,0,.07);
}

.profile image {
    width: 160rpx; height: 160rpx;
    border-radius: 10rpx;
}

.profile .info {
    flex: 1;
}
